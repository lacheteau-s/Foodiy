<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Foodiy.App.ViewModels"
             x:Class="Foodiy.App.Views.RecipePage"
             x:DataType="viewModels:RecipePageViewModel"
             Title="{Binding RecipeName}">
    <VerticalStackLayout>
        <!-- TODO: handle when image is loading or no image is specified -->
        <Image
            Source="{Binding RecipeImageUrl}"
            Aspect="AspectFill"
            HeightRequest="200"
            HorizontalOptions="Fill" />
    </VerticalStackLayout>
</ContentPage>